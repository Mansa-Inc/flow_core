<%= f.fields_for :configuration, guard.configuration do |ff| %>
  <div class="form-group">
    <%= ff.label :name %>
    <%= ff.text_field :name, required: "required", class: "form-control", class_for_error: "is-invalid" %>
    <%= ff.error_message :name, class: "invalid-feedback" %>
  </div>

  <div class="form-group">
    <%= ff.label :script %>
    <%= ff.text_area :script, rows: 10, class: "form-control", class_for_error: "is-invalid" %>
    <%= ff.error_message :script, class: "invalid-feedback" %>
    <span class="form-text text-muted">
      MRuby Script
    </span>
  </div>
<% end %>
