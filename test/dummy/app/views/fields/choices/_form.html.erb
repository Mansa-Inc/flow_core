<%- url = choice.new_record? ? field_choices_path(field) : field_choice_path(field, choice) %>
<%= form_with(model: choice, scope: :choice, url: url, local: true) do |f| %>
  <div class="form-group">
    <%= f.label :label %>
    <%= f.text_field :label, required: "required", class: "form-control", class_for_error: "is-invalid" %>
    <%= f.error_message :label, class: "invalid-feedback" %>
  </div>

  <%= f.submit class: "btn btn-block btn-primary" %>
<% end %>
