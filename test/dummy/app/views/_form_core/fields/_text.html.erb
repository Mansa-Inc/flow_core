<div class="form-group row">
  <%= f.label field.key, field.name, class: 'col-sm-2 col-form-label' %>
  <div class="col-sm-10">
    <% if field.options.multiline %>
      <%= f.text_area field.key, class: 'form-control', id: field.id, required: field.required, disabled: field.disabled?, class_for_error: "is-invalid" %>
    <% else %>
      <%= f.text_field field.key, class: 'form-control', id: field.id, required: field.required, disabled: field.disabled?, class_for_error: "is-invalid" %>
    <% end %>
    <%= f.error_message field.key, class: "invalid-feedback" %>
    <% if field.hint.present? %>
      <span class="form-text text-muted">
        <%= field.hint %>
      </span>
    <% end %>
  </div>
</div>
